
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://t3.ftcdn.net/jpg/06/52/50/84/360_F_652508416_PMVJMXZMgnpHmlUIoEnV6xlSTojSwiQ3.jpg);">
  <div class="container">
    <h1><%= @list.name %> list!</h1>
    <div class = "container text-warning font-weight-bold">Movie count: <%= @list.bookmarks.size %> </div>
    <%= link_to 'Create a bookmark', new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>
</div>

<div class="d-flex mt-2 p-5 bg-white">
   <% @list.bookmarks.each do |bookmark| %>
<div class="card m-2" style="width: 18rem;">
  <img src= <%= bookmark.movie.poster_url %>class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= bookmark.movie.title %></h5>
    <p class="card-text"><%= bookmark.comment %></p>
    <%= link_to "Delete Bookmark", bookmark_path(bookmark), data:{turbo_method: :delete, turbo_confirm: "Are your sure?"}, class: "btn btn-danger"%>
  </div>
</div>
  <% end %>
</div>
